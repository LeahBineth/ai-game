<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="open_ai_game.open_ai_api"
             Title="open_ai_api">
    <Grid ColumnDefinitions="*" RowDefinitions="Auto,*" RowSpacing="10">
        <Grid Grid.Column="0" Grid.Row="0" ColumnDefinitions="Auto,*,Auto" RowDefinitions="*" ColumnSpacing="10">
            <Label x:Name="lblPrompt" Text="Type your message:" Grid.Column="0" Grid.Row="0" Padding="10" HorizontalOptions="Center" VerticalOptions="Center"  />
            <Entry x:Name="txtGeneratedText"  Grid.Column="1" Grid.Row="0" Text=""/>
            <Button x:Name="btnGenerate" Text="Generate Text" BackgroundColor="DimGray" Grid.Column="2" Grid.Row="0" Clicked="btnGenerate_Clicked"/>
        </Grid>
        <Label x:Name="lblGeneratedText" Grid.Column="0" Grid.Row="1" BackgroundColor="Beige">
          
        </Label>
    </Grid>
</ContentPage>